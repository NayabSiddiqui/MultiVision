.container
    .well
        form.form-horizontal(name="signUpForm")
            fieldset
                legend New User Information
                .form-group
                    label.col-md-2.control-label(for="email") Email
                    .col-md-10
                        input.form-control(id="email", name="email", type="email", placeholder="Email", ng-model="email", required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(id="password", name="password", type="password", placeholder="Password", ng-model="password", required)
                .form-group
                    label.col-md-2.control-label(for="firstName") First Name
                    .col-md-10
                        input.form-control(id="firstName", name="firstName", type="text", placeholder="First Name", ng-model="firstName", required)
                .form-group
                    label.col-md-2.control-label(for="lastName") Last Name
                    .col-md-10
                        input.form-control(id="lastName", name="lastName", type="text", placeholder="Last Name", ng-model="lastName", required)
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="signUp()", ng-disabled="signUpForm.$invalid") Submit
                            | &nbsp;
                            a.btn.btn-default(href="/") Cancel